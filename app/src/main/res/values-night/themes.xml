<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TrackExpense" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        
        <!-- Component styles -->
        <item name="bottomNavigationStyle">@style/Widget.TrackExpense.BottomNavigation.Dark</item>
        <item name="materialCardViewStyle">@style/Widget.TrackExpense.CardView.Dark</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.TrackExpense.BottomNavigation.Dark" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface_dark</item>
        <item name="itemIconTint">@color/bottom_nav_color_dark</item>
        <item name="itemTextColor">@color/bottom_nav_color_dark</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.TrackExpense.CardView.Dark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>