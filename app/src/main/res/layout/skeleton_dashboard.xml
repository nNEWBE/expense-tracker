<?xml version="1.0" encoding="utf-8"?>
<!-- Professional skeleton layout for dashboard page -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <!-- Professional Header skeleton -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dashboard_header_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="24dp"
                        android:paddingBottom="50dp">

                        <!-- Top Bar skeleton -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Menu icon placeholder -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="@color/skeleton_card_bg_transparent"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp">

                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center" />

                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- Greeting -->
                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="100dp"
                                    android:layout_height="14dp"
                                    app:shimmer_baseColor="@color/skeleton_header_base"
                                    app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                                <!-- Name -->
                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="140dp"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="6dp"
                                    app:shimmer_baseColor="@color/skeleton_header_base_light"
                                    app:shimmer_highlightColor="@color/skeleton_header_highlight_light" />

                            </LinearLayout>

                            <!-- Notification placeholder -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardBackgroundColor="@color/skeleton_card_bg_transparent"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp">

                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center" />

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <!-- Balance Card skeleton -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            app:cardBackgroundColor="@color/skeleton_card_bg_semitransparent"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/skeleton_header_base"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <!-- Label -->
                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="110dp"
                                    android:layout_height="14dp"
                                    app:shimmer_baseColor="@color/skeleton_header_base"
                                    app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                                <!-- Main Balance -->
                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="200dp"
                                    android:layout_height="42dp"
                                    android:layout_marginTop="10dp"
                                    app:shimmer_baseColor="@color/skeleton_header_base_light"
                                    app:shimmer_highlightColor="@color/skeleton_header_highlight_light" />

                                <!-- Stats row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="24dp"
                                    android:orientation="horizontal">

                                    <!-- Income stat -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/stat_item_bg_income"
                                        android:backgroundTint="@color/skeleton_card_bg_transparent"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="36dp"
                                            android:layout_height="36dp"
                                            app:shimmer_baseColor="@color/skeleton_header_base"
                                            app:shimmer_highlightColor="@color/skeleton_header_highlight"
                                            app:shimmer_isCircle="true" />

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="60dp"
                                            android:layout_height="12dp"
                                            android:layout_marginTop="10dp"
                                            app:shimmer_baseColor="@color/skeleton_header_base_alt"
                                            app:shimmer_highlightColor="@color/skeleton_header_highlight_alt" />

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="90dp"
                                            android:layout_height="18dp"
                                            android:layout_marginTop="6dp"
                                            app:shimmer_baseColor="@color/skeleton_header_base"
                                            app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="12dp"
                                        android:layout_height="match_parent" />

                                    <!-- Expense stat -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/stat_item_bg_expense"
                                        android:backgroundTint="@color/skeleton_card_bg_transparent"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="16dp">

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="36dp"
                                            android:layout_height="36dp"
                                            app:shimmer_baseColor="@color/skeleton_header_base"
                                            app:shimmer_highlightColor="@color/skeleton_header_highlight"
                                            app:shimmer_isCircle="true" />

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="60dp"
                                            android:layout_height="12dp"
                                            android:layout_marginTop="10dp"
                                            app:shimmer_baseColor="@color/skeleton_header_base_alt"
                                            app:shimmer_highlightColor="@color/skeleton_header_highlight_alt" />

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="90dp"
                                            android:layout_height="18dp"
                                            android:layout_marginTop="6dp"
                                            app:shimmer_baseColor="@color/skeleton_header_base"
                                            app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </FrameLayout>

            <!-- Quick Filters Card skeleton -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-26dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="18dp">

                    <com.example.trackexpense.ui.components.ShimmerView
                        android:layout_width="74dp"
                        android:layout_height="40dp" />

                    <com.example.trackexpense.ui.components.ShimmerView
                        android:layout_width="84dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp" />

                    <com.example.trackexpense.ui.components.ShimmerView
                        android:layout_width="84dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Transactions Header skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingTop="28dp"
                android:paddingBottom="12dp">

                <com.example.trackexpense.ui.components.ShimmerView
                    android:layout_width="150dp"
                    android:layout_height="20dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.example.trackexpense.ui.components.ShimmerView
                    android:layout_width="60dp"
                    android:layout_height="15dp" />

            </LinearLayout>

            <!-- Transaction items skeleton -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingBottom="100dp">

                <!-- Transaction item 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="6dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="3dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="52dp"
                            android:layout_height="52dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="100dp"
                                android:layout_height="16dp" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="76dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="78dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Transaction item 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="6dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="3dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="52dp"
                            android:layout_height="52dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="90dp"
                                android:layout_height="16dp" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="68dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="72dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Transaction item 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="6dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="3dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="52dp"
                            android:layout_height="52dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="110dp"
                                android:layout_height="16dp" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="80dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="84dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Transaction item 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="6dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="3dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="18dp">

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="52dp"
                            android:layout_height="52dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="85dp"
                                android:layout_height="16dp" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="72dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="68dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
