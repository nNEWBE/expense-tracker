<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_gradient_bg"
    tools:context=".ui.splash.SplashActivity">

    <!-- 3D Spheres Decoration -->
    <View
        android:id="@+id/sphere1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-40dp"
        android:alpha="0"
        android:background="@drawable/sphere_dark" />

    <View
        android:id="@+id/sphere2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="80dp"
        android:alpha="0"
        android:background="@drawable/sphere_light" />

    <View
        android:id="@+id/sphere3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="start"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:alpha="0"
        android:background="@drawable/sphere_light" />

    <View
        android:id="@+id/sphere4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="100dp"
        android:alpha="0"
        android:background="@drawable/sphere_dark" />

    <View
        android:id="@+id/sphere5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="200dp"
        android:alpha="0"
        android:background="@drawable/sphere_light" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Logo Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logoCard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:alpha="0"
            app:cardBackgroundColor="#2D5A6A"
            app:cardCornerRadius="28dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/app_logo" />

        </com.google.android.material.card.MaterialCardView>

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alpha="0"
            android:text="TrackExpense"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0"
            android:text="Smart way to track your money"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Animated Loading Dots -->
    <LinearLayout
        android:id="@+id/loadingDotsContainer"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="60dp"

        android:orientation="horizontal">

        <View
            android:id="@+id/dot1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/loading_dot" />

        <View
            android:id="@+id/dot2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/loading_dot" />

        <View
            android:id="@+id/dot3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/loading_dot" />

    </LinearLayout>

    <!-- Loading Text -->
    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:alpha="0"
        android:text="Loading..."
        android:textColor="#80FFFFFF"
        android:textSize="12sp" />

</FrameLayout>
