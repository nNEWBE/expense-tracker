<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_gradient_bg">

    <!-- 3D Spheres Decoration -->
    <View
        android:id="@+id/sphere1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-20dp"
        android:alpha="0"
        android:background="@drawable/sphere_dark" />

    <View
        android:id="@+id/sphere2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:alpha="0"
        android:background="@drawable/sphere_light" />

    <View
        android:id="@+id/sphere3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:alpha="0"
        android:background="@drawable/sphere_light" />

    <!-- White Card Content -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/formCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:alpha="0"
        android:translationY="100dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="32dp"
                android:paddingTop="32dp"
                android:paddingBottom="40dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0"
                    android:text="Get Started"
                    android:textColor="#1A3A4A"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <!-- Full Name -->
                <TextView
                    android:id="@+id/tvNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:alpha="0"
                    android:text="Full Name"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/nameContainer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:alpha="0"
                    android:background="@drawable/input_underline_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        app:tint="#888888" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:inputType="textPersonName"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Email -->
                <TextView
                    android:id="@+id/tvEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:alpha="0"
                    android:text="Email"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/emailContainer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:alpha="0"
                    android:background="@drawable/input_underline_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        app:tint="#888888" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Password -->
                <TextView
                    android:id="@+id/tvPasswordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:alpha="0"
                    android:text="Password"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/passwordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:alpha="0"
                    android:background="@drawable/input_underline_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#888888" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivTogglePassword"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_view"
                        app:tint="#888888" />

                </LinearLayout>

                <!-- Sign Up Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:alpha="0"
                    android:backgroundTint="#1A3A4A"
                    android:text="SIGN UP"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="28dp" />

                <!-- Progress -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorColor="#1A3A4A" />

                <!-- Already have account -->
                <LinearLayout
                    android:id="@+id/loginContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:alpha="0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? "
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in"
                        android:textColor="#1A3A4A"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Divider -->
                <LinearLayout
                    android:id="@+id/dividerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:alpha="0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="Or"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0" />

                </LinearLayout>

                <!-- Guest Mode Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuest"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:alpha="0"
                    android:text="Continue as Guest"
                    android:textAllCaps="false"
                    android:textColor="#1A3A4A"
                    android:textSize="14sp"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_person"
                    app:iconGravity="textStart"
                    app:iconTint="#1A3A4A"
                    app:strokeColor="#E0E0E0" />

                <!-- Back Link -->
                <TextView
                    android:id="@+id/tvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:alpha="0"
                    android:padding="8dp"
                    android:text="â† Back"
                    android:textColor="#888888"
                    android:textSize="14sp" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
