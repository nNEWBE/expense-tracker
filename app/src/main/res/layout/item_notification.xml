<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    app:rippleColor="@color/primary_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Category Icon Container -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="44dp"
            android:layout_height="44dp">
            
            <!-- Icon Background -->
            <View
                android:id="@+id/iconBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/notification_icon_bg_expense" />

            <!-- Category Icon -->
            <ImageView
                android:id="@+id/ivTransactionIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:src="@drawable/ic_shopping"
                app:tint="@color/expense_red" />

        </FrameLayout>

        <!-- Transaction Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Category Name and Amount Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Category Name -->
                <TextView
                    android:id="@+id/tvNotificationDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopping"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Separator Dot -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

                <!-- Transaction Amount -->
                <TextView
                    android:id="@+id/tvNotificationAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-৳50.00"
                    android:textColor="@color/expense_red"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Type Indicator Badge -->
                <TextView
                    android:id="@+id/tvTypeIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:textColor="@color/expense_red"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/notification_icon_bg_expense" />

            </LinearLayout>

            <!-- Time and Delete Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/text_hint" />

                <TextView
                    android:id="@+id/tvNotificationTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="2 hours ago"
                    android:textColor="@color/text_hint"
                    android:textSize="11sp" />

                <!-- Delete Button -->
                <ImageView
                    android:id="@+id/btnDeleteNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_delete"
                    android:background="@drawable/notification_delete_bg"
                    app:tint="@color/expense_red"
                    android:contentDescription="Delete notification" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
