<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.expense.TransactionsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Modern Header with Gradient Background -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_header_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="35dp"
                    android:paddingBottom="32dp">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Icon Container -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="@color/white_12_alpha"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:src="@drawable/ic_nav_transaction_outline"
                                app:tint="@android:color/white" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Title and Subtitle -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transactions"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvTransactionCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:alpha="0.8"
                                android:text="All your transactions"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <!-- Clear Filter Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearFilters"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:paddingHorizontal="16dp"
                            android:text="Clear All"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:backgroundTint="@color/white_25_alpha"
                            app:cornerRadius="18dp" />

                    </LinearLayout>

                    <!-- Modern Search Bar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/white_12_alpha"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:alpha="0.7"
                                android:src="@android:drawable/ic_menu_search"
                                app:tint="@android:color/white" />

                            <EditText
                                android:id="@+id/etSearch"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="Search transactions..."
                                android:inputType="text"
                                android:textColor="@android:color/white"
                                android:textColorHint="@color/white_50_alpha"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </FrameLayout>

            <!-- Filter Chips Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="16dp">

                    <!-- Date Filter Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Period"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Date Filters -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- All Chip -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chipAll"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="@color/primary"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="@color/primary"
                                app:strokeWidth="1.5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingHorizontal="14dp">

                                    <ImageView
                                        android:id="@+id/iconAll"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_nav_analytics"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:id="@+id/tvChipAll"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6dp"
                                        android:text="All"
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Today Chip -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chipToday"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="@color/blue_50"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#BFDBFE"
                                app:strokeWidth="1.5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingHorizontal="14dp">

                                    <ImageView
                                        android:id="@+id/iconToday"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_today"
                                        app:tint="@color/blue_500" />

                                    <TextView
                                        android:id="@+id/tvChipToday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6dp"
                                        android:text="Today"
                                        android:textColor="@color/blue_500"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- This Week Chip -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chipWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="#F5F3FF"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#C4B5FD"
                                app:strokeWidth="1.5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingHorizontal="14dp">

                                    <ImageView
                                        android:id="@+id/iconWeek"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_week"
                                        app:tint="@color/violet_500" />

                                    <TextView
                                        android:id="@+id/tvChipWeek"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6dp"
                                        android:text="This Week"
                                        android:textColor="@color/violet_500"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- This Month Chip -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chipMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                app:cardBackgroundColor="@color/amber_50"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="#FDE68A"
                                app:strokeWidth="1.5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingHorizontal="14dp">

                                    <ImageView
                                        android:id="@+id/iconMonth"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_month"
                                        app:tint="@color/amber_600" />

                                    <TextView
                                        android:id="@+id/tvChipMonth"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6dp"
                                        android:text="This Month"
                                        android:textColor="@color/amber_600"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_200" />

                    <!-- Type Filter Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction Type"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Type Filters -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <!-- All Type Chip -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnTypeAll"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/primary"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iconTypeAll"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_nav_analytics"
                                    app:tint="@android:color/white" />

                                <TextView
                                    android:id="@+id/tvTypeAll"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:text="All"
                                    android:textColor="@android:color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Income Type Chip -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnTypeIncome"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/income_green_light"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/income_green"
                            app:strokeWidth="1.5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iconTypeIncome"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_arrow_up"
                                    app:tint="@color/income_green" />

                                <TextView
                                    android:id="@+id/tvTypeIncome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:text="Income"
                                    android:textColor="@color/income_green"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Expense Type Chip -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnTypeExpense"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="@color/expense_red_light"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/expense_red"
                            app:strokeWidth="1.5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iconTypeExpense"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_arrow_down"
                                    app:tint="@color/expense_red" />

                                <TextView
                                    android:id="@+id/tvTypeExpense"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:text="Expense"
                                    android:textColor="@color/expense_red"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/gray_200" />

                    <!-- Category Filter Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Dynamic Category Filters Container -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/categoryChipsContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- "All" Category Chip - Always present -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chipCatAll"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginEnd="8dp"
                                app:cardBackgroundColor="@color/primary"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="0dp"
                                app:strokeColor="@color/primary"
                                app:strokeWidth="1.5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingHorizontal="14dp">

                                    <ImageView
                                        android:id="@+id/iconCatAll"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_nav_analytics"
                                        app:tint="@android:color/white" />

                                    <TextView
                                        android:id="@+id/tvCatAll"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6dp"
                                        android:text="All"
                                        android:textColor="@android:color/white"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Dynamic categories will be added here programmatically -->

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Transactions List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:paddingHorizontal="8dp">

                <!-- Pinned Transactions Section (Sticky) -->
                <LinearLayout
                    android:id="@+id/pinnedSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Pinned Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_pin"
                            app:tint="@color/amber_600" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Pinned Transactions"
                            android:textColor="@color/amber_600"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPinnedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/amber_600"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Pinned Transactions RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPinnedTransactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/black_06_alpha" />

                </LinearLayout>

                <!-- All Transactions Header -->
                <LinearLayout
                    android:id="@+id/allTransactionsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_nav_transaction_outline"
                        app:tint="@color/gray_400" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="All Transactions"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Load More Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoadMore"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Load More Transactions"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_arrow_down"
                    app:iconGravity="textEnd"
                    app:strokeColor="@color/primary" />

                <!-- Loading indicator -->
                <ProgressBar
                    android:id="@+id/progressLoadMore"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_nav_transaction_outline"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/tvEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No transactions yet"
                    android:textColor="@color/on_background_light"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="0.7"
                    android:text="Add your first transaction using the + button"
                    android:textAlignment="center"
                    android:textColor="@color/on_background_light"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
