<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical">

    <!-- User Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- All Users Chip -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="19dp"
                app:cardElevation="0dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="14dp">

                    <ImageView
                        android:id="@+id/iconAll"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_person"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tvChipAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="All"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Verified Chip -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chipVerified"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#F0FDF4"
                app:cardCornerRadius="19dp"
                app:cardElevation="0dp"
                app:strokeColor="#BBF7D0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="14dp">

                    <ImageView
                        android:id="@+id/iconVerified"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_verified"
                        app:tint="#22C55E" />

                    <TextView
                        android:id="@+id/tvChipVerified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Verified"
                        android:textColor="#16A34A"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Admin Chip -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chipAdmin"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#EEF2FF"
                app:cardCornerRadius="19dp"
                app:cardElevation="0dp"
                app:strokeColor="#C7D2FE"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="14dp">

                    <ImageView
                        android:id="@+id/iconAdmin"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_admin"
                        app:tint="#6366F1" />

                    <TextView
                        android:id="@+id/tvChipAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Admin"
                        android:textColor="#4F46E5"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Blocked Chip -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chipBlocked"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                app:cardBackgroundColor="@color/expense_red_light"
                app:cardCornerRadius="19dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/red_200"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingHorizontal="14dp">

                    <ImageView
                        android:id="@+id/iconBlocked"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_block"
                        app:tint="@color/expense_red" />

                    <TextView
                        android:id="@+id/tvChipBlocked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Blocked"
                        android:textColor="@color/expense_red_dark"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_indicator_primary" />

        <TextView
            android:id="@+id/tvUserCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="All Users (0)"
            android:textColor="@color/on_background_light"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Users List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingHorizontal="4dp"
        android:paddingBottom="80dp" />

</LinearLayout>
