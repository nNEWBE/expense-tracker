<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <!-- Dark Background -->
    <View
        android:id="@+id/notificationDimBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Sliding Panel - Full Screen Drawer -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notificationPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Header with Gradient -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_header_bg">

                <!-- Decorative Circles -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="-20dp"
                    android:alpha="0.1"
                    android:background="@drawable/circle_decoration" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="-20dp"
                    android:alpha="0.1"
                    android:background="@drawable/circle_decoration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:paddingTop="36dp"
                    android:paddingBottom="24dp">

                    <!-- Close Button with Glass Effect -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnCloseNotificationsCard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#20FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/btnCloseNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#3B87CEEB"
                            android:padding="10dp"
                            android:src="@drawable/ic_close"
                            app:tint="@android:color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvNotificationSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Recent transactions"
                            android:textColor="#B0FFFFFF"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <!-- Clear All Button with Glass Effect -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#20FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/btnClearAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#3B87CEEB"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:text="Clear All"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </FrameLayout>

            <!-- Notification List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNotifications"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:background="@color/white"
                android:padding="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyNotifications"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/white"
                android:visibility="gone">

                <!-- Icon Container with Gradient -->
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notification_header_bg"
                        android:alpha="0.15" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="32dp"
                        android:src="@drawable/ic_nav_notifications"
                        app:tint="@color/primary" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="No notifications yet"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.3"
                    android:text="Your recent transactions will\nappear here automatically"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
