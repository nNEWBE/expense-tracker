<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_modern"
    android:padding="24dp">

    <!-- Header Icon -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_icon_circle_teal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sync"
            app:tint="@color/primary" />

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Sync Guest Data?"
        android:textColor="@color/on_background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvSyncDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="You have local transactions from guest mode. Would you like to sync them to your account?"
        android:textColor="@color/gray_500"
        android:textSize="14sp" />

    <!-- Data Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDataSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#F0FDF4"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_transaction"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tvTransactionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="5 transactions found"
                android:textColor="@color/primary_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Sync Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSync"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/primary"
        android:text="Sync to My Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_sync"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="20dp"
        app:iconTint="@android:color/white" />

    <!-- Skip Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkip"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:text="Skip (Keep Local Data)"
        android:textAllCaps="false"
        android:textColor="@color/gray_600"
        android:textSize="15sp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/gray_300"
        app:strokeWidth="1dp" />

    <!-- Discard Option -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDiscard"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:text="Discard Guest Data"
        android:textAllCaps="false"
        android:textColor="@color/expense_red"
        android:textSize="14sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="18dp"
        app:iconTint="@color/expense_red"
        app:rippleColor="#20FF5252" />

</LinearLayout>
