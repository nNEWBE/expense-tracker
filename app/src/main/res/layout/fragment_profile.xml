<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:context=".ui.profile.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Modern Gradient Header -->
            <FrameLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_header_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="60dp">

                    <!-- Top Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Icon Container -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="@color/white_12_alpha"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:src="@drawable/ic_person"
                                app:tint="@android:color/white" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Title and Subtitle -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:alpha="0.8"
                                android:text="Manage your account"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnMenu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            android:src="@drawable/ic_menu"
                            app:tint="@android:color/white" />

                    </LinearLayout>

                    <!-- Profile Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/white_25_alpha"
                        app:cardCornerRadius="45dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white_37_alpha"
                        app:strokeWidth="3dp">

                        <ImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_person"
                            app:tint="@android:color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/tvHeaderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="User Name"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- User Email -->
                    <TextView
                        android:id="@+id/tvHeaderEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="email@example.com"
                        android:textColor="@color/white_70_alpha"
                        android:textSize="14sp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="100dp">

                <!-- Quick Stats Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:weightSum="3">

                        <!-- Total Transactions -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalTransactions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/primary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Transactions"
                                android:textColor="@color/gray_400"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@color/gray_100" />

                        <!-- This Month -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvThisMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/income_green"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="This Month"
                                android:textColor="@color/gray_400"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@color/gray_100" />

                        <!-- Budget Used -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBudgetUsed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/expense_red"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Budget Used"
                                android:textColor="@color/gray_400"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Account Settings Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <!-- Section Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="12dp"
                            android:text="Account"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!-- Name -->
                        <LinearLayout
                            android:id="@+id/layoutName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_primary" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_person"
                                app:tint="@color/primary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Display Name"
                                    android:textColor="@color/on_background_light"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="User Name"
                                    android:textColor="@color/gray_400"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_300" />

                        </LinearLayout>

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_blue" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_email"
                                app:tint="@color/blue_500" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email Address"
                                    android:textColor="@color/on_background_light"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="email@example.com"
                                    android:textColor="@color/gray_400"
                                    android:textSize="13sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Preferences Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPreferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <!-- Section Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="12dp"
                            android:text="Preferences"
                            android:textColor="@color/gray_400"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <!-- Currency -->
                        <LinearLayout
                            android:id="@+id/layoutCurrency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_green" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_currency"
                                app:tint="@color/income_green" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:text="Currency"
                                android:textColor="@color/on_background_light"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BDT (৳)"
                                android:textColor="@color/gray_400"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_300" />

                        </LinearLayout>

                        <!-- Budget -->
                        <LinearLayout
                            android:id="@+id/layoutBudget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_orange" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_budget"
                                app:tint="@color/amber_500" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:text="Monthly Budget"
                                android:textColor="@color/on_background_light"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvBudget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="৳0"
                                android:textColor="@color/gray_400"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_300" />

                        </LinearLayout>

                        <!-- Theme -->
                        <LinearLayout
                            android:id="@+id/layoutTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_purple" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_theme"
                                app:tint="@color/violet_500" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:text="App Theme"
                                android:textColor="@color/on_background_light"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tvTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="System"
                                android:textColor="@color/gray_400"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_300" />

                        </LinearLayout>

                        <!-- Export -->
                        <LinearLayout
                            android:id="@+id/layoutExport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_blue" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_export"
                                app:tint="@color/blue_500" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:text="Export Data (CSV)"
                                android:textColor="@color/on_background_light"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_300" />

                        </LinearLayout>

                        <!-- Admin Panel (Hidden by default) -->
                        <LinearLayout
                            android:id="@+id/layoutAdmin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp"
                            android:visibility="gone">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_red" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_admin"
                                app:tint="@color/red_500" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:text="Admin Panel"
                                android:textColor="@color/red_500"
                                android:textSize="15sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Admin"
                                app:chipStrokeColor="@color/red_500"
                                android:textColor="@color/red_500"
                                android:textSize="10sp"
                                app:chipBackgroundColor="@color/pink_light"
                                app:chipMinHeight="24dp"
                                app:chipCornerRadius="8dp" />

                        </LinearLayout>

                        <!-- Delete Account -->
                        <LinearLayout
                            android:id="@+id/layoutDeleteAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp"
                            android:visibility="gone">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/bg_icon_red" />

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="-36dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_delete_account"
                                app:tint="@color/red_500" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1"
                                android:text="Delete My Account"
                                android:textColor="@color/red_500"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/red_500" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Guest Mode Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGuestMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Guest Mode - Sign in for full features"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    app:chipBackgroundColor="@color/amber_500"
                    app:chipIcon="@drawable/ic_info"
                    app:chipIconTint="@android:color/white"
                    app:chipCornerRadius="20dp" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/primary"
                    android:text="Sign Out"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white" />

                <!-- Version -->
                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:text="Version 1.0.0"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
