<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/gray_100"
    app:strokeWidth="1.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Category Icon with gradient ring -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp">

            <!-- Outer ring -->
            <View
                android:id="@+id/iconRing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_ring" />

            <!-- Inner icon background -->
            <View
                android:id="@+id/iconBg"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background" />

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_food"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- Category Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/on_background_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Type and Default badges -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <!-- Type Badge -->
                <TextView
                    android:id="@+id/chipType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_pill"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="EXPENSE"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <!-- Default Badge -->
                <TextView
                    android:id="@+id/chipDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_badge_default"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="DEFAULT"
                    android:textColor="@color/income_green"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!-- Color Preview -->
                <View
                    android:id="@+id/colorDot"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle_background" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Edit Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/green_50"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:rippleColor="@color/green_200"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/primary" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Delete Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/red_50"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:rippleColor="@color/red_200"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/red_500" />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
