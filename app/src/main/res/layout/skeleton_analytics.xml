<?xml version="1.0" encoding="utf-8"?>
<!-- Professional skeleton layout for analytics page -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Professional Header skeleton -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_header_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="28dp">

                    <!-- Top Bar skeleton -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Icon skeleton with card bg -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="@color/skeleton_card_bg_transparent"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                app:shimmer_baseColor="@color/skeleton_header_base"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="100dp"
                                android:layout_height="22dp"
                                app:shimmer_baseColor="@color/skeleton_header_base_light"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight_light" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="140dp"
                                android:layout_height="14dp"
                                android:layout_marginTop="6dp"
                                app:shimmer_baseColor="@color/skeleton_header_base"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                        </LinearLayout>

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:shimmer_baseColor="@color/skeleton_header_base_alt"
                            app:shimmer_highlightColor="@color/skeleton_header_highlight_alt"
                            app:shimmer_cornerRadius="20dp" />

                    </LinearLayout>

                    <!-- Summary Stats skeleton -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Income -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="60dp"
                                android:layout_height="22dp"
                                app:shimmer_baseColor="@color/skeleton_header_base_light"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight_light" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="80dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="6dp"
                                app:shimmer_baseColor="@color/skeleton_header_base"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                        </LinearLayout>

                        <!-- Expense -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="60dp"
                                android:layout_height="22dp"
                                app:shimmer_baseColor="@color/skeleton_header_base_light"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight_light" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="80dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="6dp"
                                app:shimmer_baseColor="@color/skeleton_header_base"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                        </LinearLayout>

                        <!-- Balance -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="60dp"
                                android:layout_height="22dp"
                                app:shimmer_baseColor="@color/skeleton_header_base_light"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight_light" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="80dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="6dp"
                                app:shimmer_baseColor="@color/skeleton_header_base"
                                app:shimmer_highlightColor="@color/skeleton_header_highlight" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <!-- Content Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="100dp">

                <!-- Income vs Expense Donut Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="140dp"
                            android:layout_height="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Donut chart placeholder -->
                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="140dp"
                                android:layout_height="140dp" />

                            <!-- Legend -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- Income legend -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="56dp"
                                            android:layout_height="13dp" />

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="40dp"
                                            android:layout_height="16dp"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginVertical="14dp"
                                    android:background="@color/skeleton_divider" />

                                <!-- Expense legend -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="60dp"
                                            android:layout_height="13dp" />

                                        <com.example.trackexpense.ui.components.ShimmerView
                                            android:layout_width="40dp"
                                            android:layout_height="16dp"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Category Breakdown Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="130dp"
                                android:layout_height="18dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="70dp"
                                android:layout_height="14dp" />

                        </LinearLayout>

                        <!-- Category progress items -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <!-- Item 1 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp" />

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="80dp"
                                        android:layout_height="14dp"
                                        android:layout_marginStart="10dp" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="36dp"
                                        android:layout_height="14dp" />

                                </LinearLayout>

                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp"
                                    android:layout_marginTop="10dp" />

                            </LinearLayout>

                            <!-- Item 2 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp" />

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="90dp"
                                        android:layout_height="14dp"
                                        android:layout_marginStart="10dp" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="36dp"
                                        android:layout_height="14dp" />

                                </LinearLayout>

                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="200dp"
                                    android:layout_height="8dp"
                                    android:layout_marginTop="10dp" />

                            </LinearLayout>

                            <!-- Item 3 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="10dp"
                                        android:layout_height="10dp" />

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="70dp"
                                        android:layout_height="14dp"
                                        android:layout_marginStart="10dp" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_weight="1" />

                                    <com.example.trackexpense.ui.components.ShimmerView
                                        android:layout_width="36dp"
                                        android:layout_height="14dp" />

                                </LinearLayout>

                                <com.example.trackexpense.ui.components.ShimmerView
                                    android:layout_width="140dp"
                                    android:layout_height="8dp"
                                    android:layout_marginTop="10dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Weekly Chart Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="130dp"
                            android:layout_height="18dp" />

                        <!-- Chart placeholder -->
                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Monthly Trend Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="110dp"
                                android:layout_height="18dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <com.example.trackexpense.ui.components.ShimmerView
                                android:layout_width="90dp"
                                android:layout_height="14dp" />

                        </LinearLayout>

                        <!-- Chart placeholder -->
                        <com.example.trackexpense.ui.components.ShimmerView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
