<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Background decorative circles -->
    <View
        android:id="@+id/decorCircle1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:alpha="0"
        android:background="@drawable/circle_teal_light" />

    <View
        android:id="@+id/decorCircle2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="-80dp"
        android:alpha="0"
        android:background="@drawable/circle_teal_light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="60dp"
            android:paddingBottom="40dp">

            <!-- Illustration Container with dotted circle -->
            <FrameLayout
                android:id="@+id/illustrationContainer"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:alpha="0"
                android:scaleX="0.8"
                android:scaleY="0.8">

                <!-- Dotted circle background -->
                <View
                    android:id="@+id/dottedCircle"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dotted_circle" />

                <!-- Email verification illustration -->
                <ImageView
                    android:id="@+id/ivEmailIllustration"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email_verification" />

            </FrameLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:alpha="0"
                android:text="Email Verification"
                android:textColor="#1A3A4A"
                android:textSize="28sp"
                android:textStyle="bold"
                android:translationY="30dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="We've sent a verification link to your email address. Please check your inbox and click the link to verify."
                android:textColor="#888888"
                android:textSize="15sp"
                android:translationY="20dp" />

            <!-- Email display -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0"
                android:text="example@email.com"
                android:textColor="#1A3A4A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationY="20dp" />

            <!-- Status indicator -->
            <LinearLayout
                android:id="@+id/statusContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:alpha="0"
                android:background="@drawable/status_bg_pending"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">

                <ProgressBar
                    android:id="@+id/statusProgress"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:indeterminate="true"
                    android:indeterminateTint="#FF9800" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Waiting for verification..."
                    android:textColor="#FF9800"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Resend link section -->
            <LinearLayout
                android:id="@+id/resendContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:alpha="0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Didn't receive the email? "
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvResend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend"
                    android:textColor="#1A3A4A"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Timer text -->
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0"
                android:text="Resend available in 60s"
                android:textColor="#888888"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Proceed button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:alpha="0"
                android:background="@drawable/verify_button_gradient"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:text="I've Verified My Email"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                app:cornerRadius="28dp" />

            <!-- Progress indicator for checking -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="#1A3A4A" />

            <!-- Open email app button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenEmail"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:alpha="0"
                android:text="Open Email App"
                android:textAllCaps="false"
                android:textColor="#1A3A4A"
                android:textSize="14sp"
                app:icon="@drawable/ic_email"
                app:iconGravity="textStart"
                app:iconTint="#1A3A4A" />

            <!-- Back to login -->
            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0"
                android:padding="8dp"
                android:text="â† Back to Login"
                android:textColor="#888888"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
