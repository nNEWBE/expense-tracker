<?xml version="1.0" encoding="utf-8"?>
<!-- Pop enter animation - scale down from larger with fade -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="350"
    android:interpolator="@android:anim/decelerate_interpolator">
    
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1" />
    
    <translate
        android:fromYDelta="-5%"
        android:toYDelta="0" />
    
    <scale
        android:fromXScale="1.08"
        android:fromYScale="1.08"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%" />
</set>
