<?xml version="1.0" encoding="utf-8"?>
<!-- Page enter animation - slide up with fade and scale -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="350"
    android:interpolator="@android:anim/decelerate_interpolator">
    
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1" />
    
    <translate
        android:fromYDelta="5%"
        android:toYDelta="0" />
    
    <scale
        android:fromXScale="0.92"
        android:fromYScale="0.92"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%" />
</set>
