<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TrackExpense" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        
        <!-- Component styles -->
        <item name="bottomNavigationStyle">@style/Widget.TrackExpense.BottomNavigation</item>
        <item name="materialCardViewStyle">@style/Widget.TrackExpense.CardView</item>
    </style>

    <style name="Theme.TrackExpense.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_salary</item>
        <item name="postSplashScreenTheme">@style/Theme.TrackExpense</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.TrackExpense.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface_light</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.TrackExpense.BottomNavigation.ActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.TrackExpense.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/category_entertainment_bg</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.TrackExpense.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_light</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.TrackExpense.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.TrackExpense.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Body.Text</item>
    </style>

    <style name="MaterialAlertDialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/on_background_light</item>
    </style>
</resources>